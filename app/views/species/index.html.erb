<!--=== Content Part ===-->
<div class="container"> 
  <!-- Service Blocks -->
  <div class="row">

    <h1>Listing species</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Scientific name</th>
      <th>Description</th>
      <th>Distribution</th>
      <th>Range map</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td><%= species.common_name %></td>
        <td><%= species.scientific_name %></td>
        <td><%= species.description %></td>
        <td><%= species.distribution %></td>
        <td><%= species.range_map %></td>
        <td><%= link_to 'Show', species %></td>
        <td><%= link_to 'Edit', edit_species_path(species) %></td>
        <td><%= link_to 'Destroy', species, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Species', new_species_path %>

  </div>
</div>
